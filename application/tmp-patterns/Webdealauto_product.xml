<Pattern title="Webdealauto_product" storage="mysql">
	<URLRules>
		<RegexInclude>^(http://webdealauto.com)</RegexInclude>
	</URLRules>
	<Field title="Product">
		<XPath>/html[contains(@lang,'fr') and contains(@data-root,'http://www.webdealauto.com/')]/body/div/div/div[contains(@class,'products_listing')]/div[contains(@class,'row') and contains(@class,'product-informations')]/div[contains(@class,'col-xs-12')]/div[contains(@class,'listing') and contains(@class,'product-list-item')]/div[contains(@class,'row')]/div[contains(@class,'col-xs-12')]</XPath>
		<Type name="[]struct"></Type>
		<Field title="div1">
			<XPath>//div[contains(@class,'col-xs-3') and contains(@class,'purchase-box')]/div[contains(@class,'content')]</XPath>
			<Type name="struct"></Type>
			<Field title="Price">
				<XPath>div[contains(@class,'price')]</XPath>
				<Type name="string"></Type>
				<DataRules>
					<RegexRemove>^[\\x20\\x09\\x0D\\x0A]+</RegexRemove>
					<RegexRemove>[\\x20\\x09\\x0D\\x0A]+$</RegexRemove>
				</DataRules>
			</Field>
			<Field title="Discount">
				<XPath>div[contains(@class,'reduction-percentage-background')]/div[contains(@class,'reduction-percentage-container')]</XPath>
				<Type name="string"></Type>
				<DataRules>
					<RegexRemove>^[\\x20\\x09\\x0D\\x0A]+</RegexRemove>
					<RegexRemove>[\\x20\\x09\\x0D\\x0A]+$</RegexRemove>
				</DataRules>
			</Field>

		</Field>
		<Field title="div2">
			<XPath>div[contains(@class,'col-xs-7') and contains(@class,'product-specifications')]/div</XPath>
			<Type name="struct"></Type>
			<Field title="Title" optional="true">
				<XPath>h2[contains(@class,'title')]/a[contains(@class,'blue-hover-title')]</XPath>
				<Type name="string"></Type>
				<DataRules>
					<RegexRemove>^[\\x20\\x09\\x0D\\x0A]+</RegexRemove>
					<RegexRemove>[\\x20\\x09\\x0D\\x0A]+$</RegexRemove>
				</DataRules>
			</Field>
			<Field title="Description" >
				<XPath>ul[contains(@class,'technical-informations-list')]</XPath>
				<Type name="string"></Type>
				<DataRules>
					<RegexRemove>^[\\x20\\x09\\x0D\\x0A]+</RegexRemove>
					<RegexRemove>[\\x20\\x09\\x0D\\x0A]+$</RegexRemove>
				</DataRules>
				<!--
				<Field title="text" optional="true">
					<XPath>li/span[contains(@class,'list-style')]</XPath>
				</Field>
				<Field title="text" optional="true">
					<XPath></XPath>
				</Field>
				-->
			</Field>

		</Field>
		<Field title="div3">
			<XPath>//div[contains(@class,'col-xs-2') and contains(@class,'images-container')]/div[contains(@class,'manufacturer-logo-container')]/img</XPath>
			<Type name="struct"></Type>
			<Field title="Image">
				<XPath>@src</XPath>
				<Type name="string"></Type>
			</Field>
			<Field title="Brand">
				<XPath>@title</XPath>
				<Type name="string"></Type>
			</Field>

		</Field>
	</Field>
</Pattern>				
