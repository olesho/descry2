<Pattern mime="html">
	<URL>
		<Include><![CDATA[
				^http://workinstartups.com/?$
		]]></Include>
	</URL>
	<Field title="Item" type="[]struct">
		<Path>
			<![CDATA[
				//div[@class='big-column-box']/ul/li
			]]>
		</Path>
		<Field title="Link" type="string">
			<Path>
				<![CDATA[
					a/@href
				]]>
			</Path>
		</Field>
		<Field title="Title" type="string">
			<Path>
				<![CDATA[
					a/text()
				]]>
			</Path>
		</Field>
	</Field>
</Pattern>