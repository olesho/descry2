<Pattern mime="html">
	<URL>
		<Include><![CDATA[
				^https://www.amazon.com/dp/[A-Z0-9]+.*?$
		]]></Include>
	</URL>
	<Field title="Item" type="struct">
		<Path><![CDATA[
			//div[@id="dp"]
		]]></Path>
		<Field title="Title" type="[]string">
			<Path>
				<![CDATA[
					//h1[@id='title']/span
				]]>
			</Path>
			<Data>
				<Remove><![CDATA[
					^[\x20\x09\x0D\x0A]+
					[\x20\x09\x0D\x0A]+$
				]]></Remove>
			</Data>
		</Field>
		<Field title="size" type="[]string">
			<Path><![CDATA[
				//div[@id='variation_size_name']//select/option
			]]></Path>
			<Data>
				<Remove><![CDATA[
					^[\x20\x09\x0D\x0A]+
					[\x20\x09\x0D\x0A]+$
				]]></Remove>
			</Data>
		</Field>
	</Field>
</Pattern>